{
  "name": "work-tool",
  "version": "0.8.0",
  "description": "Work tools",
  "license": "MIT",
  "author": "emfprhs119",
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:esbuild dev:electron",
    "thirdparty": "xcopy thirdparty dist /y/d/e",
    "prebuild": "rimraf dist",
    "build": "tsc && cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts",
    "postbuild": "npm run thirdparty",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on dist/main.js dist/index.html && npm run thirdparty && electronmon .",
    "test": "jest",
    "package": "ts-node ./builder.ts"
  },
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "dependencies": {
    "antd": "^5.12.2",
    "clipboard-event": "^1.6.0",
    "electron-log": "^5.0.1",
    "electron-settings": "^4.0.2",
    "icomoon-react": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "react-virtualized": "^9.22.5",
    "typescript-optional": "^3.0.0-alpha.3"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.6.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.18.1",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "@types/react-virtualized": "^9.21.29",
    "@types/testing-library__jest-dom": "^5.14.9",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "electron": "^26.2.4",
    "electron-builder": "^24.7.0",
    "electronmon": "^2.0.2",
    "esbuild": "^0.19.4",
    "esbuild-style-plugin": "^1.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  }
}
